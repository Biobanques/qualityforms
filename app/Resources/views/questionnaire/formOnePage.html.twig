{% extends 'default/index.html.twig' %}
{% if isAnswered%}
    {% set object = 'Answer'%}
{% else %}
    {% set object = 'Questionnaire'%}
{% endif %}

{% use '/questionnaire/onePageRenderer.html.twig' with stylesheets as page_stylesheets,content as pageContent %}


{% block stylesheets %}
    {{parent()}}
    {{ block('page_stylesheets') }}
{% endblock %}

{% block content %}
    <h2>{{action | capitalize~' '~object|lower}} <i>{{questionnaire.name}}</i></h2>


    <div class = 'row' style="margin-top: 15px;margin-bottom: 15px">
        <div class =' col-lg-3'><a href ={{path('exportPDFQuestionnaire',{'id':questionnaire._id})}}> <i class = 'fa fa-file-pdf-o'></i>  PDF export</a></div>
        <div class =' col-lg-3'><a href ={{path('viewQuestionnaire',{'id':questionnaire._id})}}> <i class = 'fa fa-table'></i>  Multiple tabs view</a></div>
    </div>



    {{ block('pageContent') }}
{% endblock %}