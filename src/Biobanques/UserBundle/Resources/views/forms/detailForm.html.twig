{% extends 'default/index.html.twig' %}
{% block content %}
    <h2>{{ action|capitalize}} user {%if action!='create' %}{{user._id}}{%endif%}</h2>
    <br>
    {% if (errors is defined) and (errors) %}
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">x</a>

            {% for error in errors %}
                <div>{{ error.required }}</div>
            {%endfor%}
        </div>
    {% endif %}
    <br>
    <form class="form-horizontal" action="{{action}}" method="post" role="form">
        {% if action == 'view'%}   <fieldset disabled>        {% endif %}
            <div class="form-group">
                <label class="control-label col-sm-2" for="username">username:</label>
                <div class="col-sm-10">
                    <input type="username" class="form-control" id="username" name="username" placeholder="Enter username" value="{{ user.getUsername }}">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="password">Password:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2"> Administrateur</div>
                <div class="col-sm-10">
                    <div class="checkbox  ">
                        <label>
                            <input type="checkbox"  name="roles[]" id="roleAdminCB" value="ROLE_ADMIN"
                                   {% if 'ROLE_ADMIN' in user.getRoles%} checked {% endif %}>
                        </label>
                    </div>
                </div>
                <div class="control-label col-sm-2"> Utilisateur</div>
                <div class="col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"  name="roles[]" id="roleUserCB" value="ROLE_USER"
                                   {% if 'ROLE_USER' in user.getRoles%} checked {% endif %}>
                        </label>
                    </div>
                </div>
                {% if action != 'view'%}
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">{{action |capitalize}}</button>
                        </div>
                    </div>
                {% endif %}
                {% if action == 'view'%}   </fieldset>        {% endif %}
    </form>
{% endblock %}
